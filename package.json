{
  "name": "ssl-syntax-support",
  "displayName": "S/SL Syntax Support",
  "description": "Syntax support the the S/SL language",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "publisher": "AllanLegemaate",
  "repository": {
    "type": "git",
    "url": "https://github.com/alegemaate/ssl-syntax-vscode"
  },
  "contributes": {
    "languages": [
      {
        "id": "ssl",
        "aliases": [
          "S/SL"
        ],
        "extensions": [
          ".ssl"
        ],
        "configuration": "./language-configuration-ssl.json"
      },
      {
        "id": "ssl-def",
        "aliases": [
          "S/SL Defenition"
        ],
        "extensions": [
          ".def"
        ],
        "configuration": "./language-configuration-def.json"
      }
    ],
    "grammars": [
      {
        "language": "ssl",
        "scopeName": "source.ssl",
        "path": "./syntaxes/ssl.tmLanguage.json"
      },
      {
        "language": "ssl-def",
        "scopeName": "source.ssl-def",
        "path": "./syntaxes/ssl-def.tmLanguage.json"
      }
    ]
  }
}
